<Window x:Class="ExcelConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="OnWindowLoaded"
        Closed="OnWindowClosed">
    <Grid>
        <Button Content="转换" HorizontalAlignment="Left" Height="20" Margin="64,23,0,0" VerticalAlignment="Top" Width="99" Click="Convert"/>
        <Button Content="扫描" HorizontalAlignment="Left" Height="20" Margin="254,23,0,0" VerticalAlignment="Top" Width="99" Click="ScanDir"/>
        <Label Content="固定" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="176" Margin="10,68,0,0"/>
        <ScrollViewer Margin="10,97,10,274"/>
        <TreeView Name="DirTreeView"  Margin="0,235,0,0" ItemsSource="{Binding DataSource}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Child}" DataType="{x:Type local:TreeNode}">
                    <Button Content="{Binding Name}" Width="Auto" Click="OnItemSelect" Background="White" BorderThickness="0,0,0,0" Tag="{Binding Tag}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <!--<Setter Property="IsExpanded" Value="True"/>-->
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ContextMenu>
                <ContextMenu x:Name="ContextMenu_EditNode">
                    <MenuItem Header="新增节点" Name="MenuItem_AddNode" Click="MenuItem_AddNode_Click" Tag="{Binding Tag}"/>
                    <MenuItem Header="删除节点" Name="MenuItem_DeleteNode" Click="MenuItem_DeleteNode_Click"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>

    </Grid>
</Window>
