<Window x:Class="ExcelConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800"
        Loaded="OnWindowLoaded"
        Closed="OnWindowClosed">
    <Grid>
        <Button Content="开始转表" HorizontalAlignment="Left" Height="20" Margin="65,33,0,0" VerticalAlignment="Top" Width="99" Click="Convert"/>
        <Button Content="扫描文件夹" HorizontalAlignment="Left" Height="20" Margin="251,33,0,0" VerticalAlignment="Top" Width="99" Click="ScanDir"/>
        <Label Content="收藏列表：" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="176" Margin="10,68,0,0"/>
        <ScrollViewer Margin="10,97,10,294" BorderThickness="1,1,1,1">
            <UniformGrid Columns="6" x:Name="FavGrid">
                <Label Content="空" Height="28" Width="117"/>
            </UniformGrid>
        </ScrollViewer>
        <TreeView Name="DirTreeView"  Margin="0,220,0,0" ItemsSource="{Binding DataSource}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Child}" DataType="{x:Type local:TreeNode}">
                    <Button Content="{Binding Name}" Width="Auto" Click="OnItemSelect" Background="White" BorderThickness="0,0,0,0" Tag="{Binding Path}">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="添加收藏" Name="MenuItemAddNode" Click="MenuItemAddNodeClick" Tag="{Binding Path}"/>
                                <MenuItem Header="删除收藏" Name="MenuItemDeleteNode" Click="MenuItemDeleteNodeClick" Tag="{Binding Path}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <!--<Setter Property="IsExpanded" Value="True"/>-->
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>

    </Grid>
</Window>
