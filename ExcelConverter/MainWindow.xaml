<Window x:Class="ExcelConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="589" Width="800"
        Loaded="OnWindowLoaded"
        Closed="OnWindowClosed">
    <Grid>
        <Button x:Name="ConvertBtn" Content="开始转表" HorizontalAlignment="Left" Height="20" Margin="66,18,0,0" VerticalAlignment="Top" Width="99" Click="Convert"/>
        <Button x:Name="ScanBtn" Content="扫描文件夹" HorizontalAlignment="Left" Height="20" Margin="250,18,0,0" VerticalAlignment="Top" Width="99" Click="ScanDir"/>
        <ProgressBar x:Name="ScanProgressBar"  HorizontalAlignment="Left" Height="10" Width="70" Margin="360,23,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ScanLabel" Content="" HorizontalAlignment="Left" Height="19" Width="40" Margin="435,18,0,0" VerticalAlignment="Top" FontSize="8" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,68,0" 
                 Text="" TextWrapping="Wrap" Width="202" Height="28" TextChanged="SearchTextChange" VerticalContentAlignment="Center" ToolTip="Search Excel"/>
        <Label x:Name="ConvertLabel" Content="待转列表：" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="176" Margin="10,42,0,0"/>

        <Border x:Name="CovertListBorder" BorderBrush="Black" Margin="8,65,8,406" BorderThickness="1,1,1,1">
            <Border.Style>
                <Style>
                    <Setter Property="Border.Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=theScrollViewer, Path=ComputedVerticalScrollBarVisibility}" Value="Collapsed">
                            <Setter Property="Border.Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <ScrollViewer x:Name="ConvertScrollViewer" Margin="10,66,10,407" BorderThickness="1,1,1,1">
            <UniformGrid Columns="6" x:Name="ConvertGrid">
                <Label Content="空" Height="28" Width="117"/>
            </UniformGrid>
        </ScrollViewer>
        <Label x:Name="FavLabel" Content="收藏列表：" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="176" Margin="10,172,0,0"/>
        <Border x:Name="FavCovertListBorder" BorderBrush="Black" Margin="9,198,9,264" BorderThickness="1,1,1,1">
            <Border.Style>
                <Style>
                    <Setter Property="UIElement.Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ComputedVerticalScrollBarVisibility, ElementName=theScrollViewer}" Value="Collapsed">
                            <Setter Property="UIElement.Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <ScrollViewer x:Name="FavScrollViewer" Margin="10,201,10,269" BorderThickness="1,1,1,1">
            <UniformGrid Columns="6" x:Name="FavGrid">
                <Label Content="空" Height="28" Width="117"/>
            </UniformGrid>
        </ScrollViewer>
        <TreeView Name="DirTreeView"  Margin="10,313,10,0" ItemsSource="{Binding DataSource}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Child}" DataType="{x:Type local:TreeNode}">
                    <Button Content="{Binding Name}" Width="Auto" Click="OnTreeItemSelect" Background="{Binding Color}" BorderThickness="0,0,0,0" Tag="{Binding Path}">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="添加转表" Name="MenuItemAddConvertNode" Click="TreeItemAddConvert" Tag="{Binding Path}"/>
                                <MenuItem Header="打开文件夹" Name="MenuItemOpenFolderNode" Click="OpenTreeItemFolder" Tag="{Binding Path}"/>
                                <MenuItem Header="添加收藏" Name="MenuItemAddNode" Click="MenuItemAddNodeClick" Tag="{Binding Path}"/>
                                <MenuItem Header="删除收藏" Name="MenuItemDeleteNode" Click="MenuItemDeleteNodeClick" Tag="{Binding Path}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <!--<Setter Property="IsExpanded" Value="True"/>-->
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>

    </Grid>
</Window>
